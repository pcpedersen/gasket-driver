#!/usr/bin/make -f

include /usr/share/dpkg/pkg-info.mk

export GPG_PASSPHRASE
export HOME

%:
	dh $@ --with dkms

override_dh_auto_configure:

override_dh_auto_build:
	# Explicit kernel module build
	$(MAKE) -C /lib/modules/$(shell uname -r)/build M=$(CURDIR)/src modules
	# Signing each .ko module individually
	@for KMOD in $(CURDIR)/src/*.ko; do \
		if [ -f "$$KMOD" ]; then \
			if [ -f "$(HOME)/signing_key.pem" ] && [ -f "$(HOME)/signing_key.x509" ]; then \
			    echo "üîè Signing $$KMOD"; \
			    /usr/src/linux-headers-$(shell uname -r)/scripts/sign-file sha256 signing_key.pem signing_key.x509 $$KMOD || \
			    echo "‚ùå Signing failed for $$KMOD"; \
			else \
			    echo "‚ö†Ô∏è Signing keys not found; skipping signing."; \
			fi; \
		else \
			echo "‚ö†Ô∏è Module not found: $$KMOD"; \
		fi; \
	done

override_dh_auto_clean:
	$(MAKE) -C /lib/modules/$(shell uname -r)/build M=$(CURDIR)/src clean

override_dh_auto_test:

override_dh_auto_install:

override_dh_install:
	dh_install src/* usr/src/gasket-$(DEB_VERSION_UPSTREAM)/

override_dh_dkms:
	dh_dkms -V $(DEB_VERSION_UPSTREAM)
